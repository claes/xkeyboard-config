
// Map movement and some control characters such as Delete and Backspace
// to third level alphanumeric keys. 
// The keys have been chosen to follow a "unix tradition" (mixed vi / emacs / 
// bash influences), while trying to preserve the the most valuable existing 
// mappings on this level.
//
// Claes Holmerson (claesatwork_at_gmail_dot_com)
 
default partial
xkb_symbols "base" {

    key <AC01>  { [         NoSymbol,          NoSymbol, Home ] }; //a
    key <AD03>  { [         NoSymbol,          NoSymbol, End ] }; //e

    key <AC03>  { [         NoSymbol,          NoSymbol, Delete ] }; //d
    key <AC05>  { [         NoSymbol,          NoSymbol, BackSpace ] }; //g

    key <AC06>  { [         NoSymbol,          NoSymbol, Left ] }; //h
    key <AC07>  { [         NoSymbol,          NoSymbol, Down ] }; //j
    key <AC08>  { [         NoSymbol,          NoSymbol, Up ] };  //k
    key <AC09>  { [         NoSymbol,          NoSymbol, Right ] }; //l

    key <AD10>  { [         NoSymbol,          NoSymbol, Prior ] }; //p
    key <AB06>  { [         NoSymbol,          NoSymbol, Next ] }; //n

};


